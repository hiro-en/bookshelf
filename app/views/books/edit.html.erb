<div class='error'>
  <% if @list.errors.any? %>
    <h4 class='errors-count'><%= @list.errors.count %>errors prohibited this book from being saved:</h4>
    <ul class='error-message'>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="register">
  <%= form_with model: @list, url: book_path(@list.id), method: :patch do |form| %>
    <h4>Title</h4>
  <%= form.text_field :title %>

  <h4>Body</h4>
  <%= form.text_area :body %>

  <p><%= form.submit 'Update Book' %></p>

  <% end %>
  <P class='link'><%= link_to 'Show',book_path(params[:id]) %>|<%= link_to 'Back',books_path %></p>

  
</div>